<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    tools:context=".ControlActivity" >

    <GridLayout
        android:layout_width="400dp"
        android:layout_height="235dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0" >

        <TextView
            android:id="@+id/wristText"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="@string/wrist" />

        <TextView
            android:id="@+id/elbowText"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/elbow" />

        <Button
            android:id="@+id/elbowLeft"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="2"
            android:gravity="left|center_vertical"
            android:text="@string/left" />

        <Button
            android:id="@+id/elbowRight"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_row="2"
            android:gravity="left|center_vertical"
            android:text="@string/right" />

        <Button
            android:id="@+id/wristDown"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="3"
            android:gravity="left|center_vertical"
            android:text="@string/down" />

        <Button
            android:id="@+id/wristUp"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="1"
            android:gravity="left|center_vertical"
            android:text="@string/up" />
    </GridLayout>

    <GridLayout
        android:layout_width="400dp"
        android:layout_height="235dp"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_rowSpan="3" >

        <TextView
            android:id="@+id/driveText"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="@string/drive" />

        <TextView
            android:id="@+id/turnText"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/steer" />

        <Button
            android:id="@+id/steerLeft"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="2"
            android:gravity="left|center_vertical"
            android:text="@string/left" />

        <Button
            android:id="@+id/steerRight"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_row="2"
            android:gravity="left|center_vertical"
            android:text="@string/right" />

        <Button
            android:id="@+id/driveBck"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="3"
            android:gravity="left|center_vertical"
            android:text="@string/back" />

        <Button
            android:id="@+id/driveFwd"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="1"
            android:gravity="left|center_vertical"
            android:text="@string/forward" />
    </GridLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="112dp"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:orientation="vertical" >

        <Button
            android:id="@+id/connectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="45dp"
            android:text="@string/connect" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notconnected"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>

    <GridLayout
        android:layout_width="400dp"
        android:layout_height="235dp"
        android:layout_column="3"
        android:layout_gravity="right|top"
        android:layout_row="0" >

        <TextView
            android:id="@+id/clawText"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="@string/claw" />

        <TextView
            android:id="@+id/handText"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/hand" />

        <Button
            android:id="@+id/handLeft"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="2"
            android:gravity="left|center_vertical"
            android:text="@string/left" />

        <Button
            android:id="@+id/handRight"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_row="2"
            android:gravity="left|center_vertical"
            android:text="@string/right" />

        <Button
            android:id="@+id/clawClose"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="3"
            android:gravity="left|center_vertical"
            android:text="@string/close" />

        <Button
            android:id="@+id/clawOpen"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="1"
            android:gravity="left|center_vertical"
            android:text="@string/open" />
    </GridLayout>

    <GridLayout
        android:layout_width="400dp"
        android:layout_height="235dp"
        android:layout_column="3"
        android:layout_gravity="right|top"
        android:layout_row="1"
        android:layout_rowSpan="3" >

        <TextView
            android:id="@+id/shoulderText"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="@string/shoulder" />

        <TextView
            android:id="@+id/baseText"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/base" />

        <Button
            android:id="@+id/baseLeft"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="2"
            android:gravity="left|center_vertical"
            android:text="@string/left" />

        <Button
            android:id="@+id/baseRight"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_row="2"
            android:gravity="left|center_vertical"
            android:text="@string/right" />

        <Button
            android:id="@+id/shoulderDown"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="3"
            android:gravity="left|center_vertical"
            android:text="@string/down" />

        <Button
            android:id="@+id/shoulderUp"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="1"
            android:gravity="left|center_vertical"
            android:text="@string/up" />
    </GridLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:layout_row="3" >

        <Button
            android:id="@+id/disconnectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:text="@string/disconnect" />
    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="46dp"
        android:layout_column="0"
        android:layout_row="1" />

    <Space
        android:layout_width="1dp"
        android:layout_height="135dp"
        android:layout_column="0"
        android:layout_row="2" />

    <Space
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_row="0" />

    <Space
        android:layout_width="99dp"
        android:layout_height="15dp"
        android:layout_column="2" />

</GridLayout>